{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2018",
    "lib": ["es2018"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/libs.d.ts"],
  "exclude": ["node_modules"]
}
